<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/top_tracks_bg"
    tools:context=".activities.TopTracksActivity">

    <Button
        android:id="@+id/btn_4_weeks"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/button_bg"
        android:fontFamily="@font/circular_bold"
        android:foreground="?android:attr/selectableItemBackground"
        android:letterSpacing="-0.01"
        android:shadowColor="@color/black"
        android:text="Last 4 weeks"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_6_month"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/button_bg"
        android:fontFamily="@font/circular_bold"
        android:foreground="?android:attr/selectableItemBackground"
        android:letterSpacing="-0.01"
        android:text="Last 6 months"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_4_weeks" />

    <Button
        android:id="@+id/btn_all_time"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/button_bg"
        android:fontFamily="@font/circular_bold"
        android:foreground="?android:attr/selectableItemBackground"
        android:letterSpacing="-0.01"
        android:text="All time"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_6_month" />

</androidx.constraintlayout.widget.ConstraintLayout>